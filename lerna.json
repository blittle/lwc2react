{
  "version": "0.3.0",
  "npmClient": "npm",
  "exact": true,
  "stream": true,
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "master",
      "exact": true,
      "conventionalCommits": true,
      "ignoreChanges": ["**/*.md", "**/tests/**"],
      "message": "chore(version): bump release version to %v"
    }
  }
}
